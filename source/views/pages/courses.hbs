<!-- courses.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Courses</title>
</head>
<body>
    {{> message}}
    <h2>List of Courses</h2>
    <table>
        <thead>
            <tr>
                <th>Course ID</th>
                <th>Course Name</th>
                <th>Credit Hours</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{this.course_id}}</td>
                <td>{{this.course_name}}</td>
                <td>{{this.credit_hours}}</td>
                <td>
                    {{#if this.taken}}
                        <button type="button" disabled>Already Taken</button>
                    {{else}}
                        <form action="/courses/add" method="POST">
                            <input type="hidden" name="course_id" value="{{this.course_id}}">
                            <button type="submit">ADD</button>
                        </form>
                    {{/if}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    
    <!-- Include message partial for displaying alerts -->
    <!--{{> message}}-->
</body>
</html>
